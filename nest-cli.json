{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "i18n/**/*",
        "watchAssets": true,
        "outDir": "dist/src"
      },
      {
        "include": "../views",
        "watchAssets": true,
        "outDir": "dist/views"
      },
      {
        "include": "../public",
        "watchAssets": true,
        "outDir": "dist/public"
      }
    ]
  }
}
